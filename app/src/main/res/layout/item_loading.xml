<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/loadingFrameLayout"
    android:background="#000000aa">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000aa"
        android:id="@+id/invisibleButton"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/invisibleEditText"
        />

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000">

        <ImageView
            android:id="@+id/loading_spinningIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/idtuber_icon"/>
        <com.project.indotuber.fonts.MontserratBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="LOADING ..."/>
    </LinearLayout>
</FrameLayout>