<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="#f5f5f5"
    app:cardUseCompatPadding="true">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#f5f5f5"
        android:id="@+id/otherVideoCard_layout"
        >
        <ImageView
            android:id="@+id/otherVideoCard_videoThumbnail"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <com.project.indotuber.fonts.MontserratBoldTextView
                android:id="@+id/otherVideoCard_videoChannelName"

                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:textColor="#db466b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:maxLines="1"
                android:text="asd"
                android:ellipsize="end"/>
            <com.project.indotuber.fonts.UbuntuRegulerTextView
                android:id="@+id/otherVideoCard_videoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#727272"
                android:layout_marginTop="5dp"
                android:text="tes String"
                android:maxLines="3"
                android:ellipsize="end"
                />


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>